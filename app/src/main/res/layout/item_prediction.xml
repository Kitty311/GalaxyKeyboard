<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/gap_small"
        android:orientation="vertical">
        <com.galaxy.keyboard.widget.GalaxyTextView
            android:id="@+id/wordText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/predictTextColor"
            android:textSize="@dimen/app_text_size_big"
            android:text="Galaxy"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/numText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/predictNumColor"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="@dimen/app_text_size_normal"/>
    </LinearLayout>
    <View
        android:visibility="gone"
        android:layout_width="@dimen/stroke_small"
        android:layout_height="match_parent"
        android:background="@color/predictWordDividerColor"/>
</LinearLayout>